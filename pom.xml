<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.vertx</groupId>
    <artifactId>vertx-ext-parent</artifactId>
    <version>26</version>
  </parent>

  <artifactId>vertx-monitoring-parent</artifactId>
  <version>3.5.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Vert.x monitoring module</name>

  <scm>
    <connection>scm:git:ssh://github.com/vert-x3/vertx-monitoring</connection>
    <developerConnection>scm:git:ssh://github.com/vert-x3/vertx-monitoring</developerConnection>
    <url>https://github.com/vert-x3/vertx-monitoring</url>
  </scm>

  <properties>
    <doc.skip>true</doc.skip>
    <stack.version>3.5.1-SNAPSHOT</stack.version>
    <assertj.version>3.9.0</assertj.version>
    <junit.version>4.12</junit.version>
    <maven-failsafe-plugin.version>2.18.1</maven-failsafe-plugin.version>
    <codegen.rxjava.deprecated>true</codegen.rxjava.deprecated>
  </properties>

  <modules>
    <module>monitoring-common</module>
    <module>batching-collector</module>
    <module>reporters</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.vertx</groupId>
        <artifactId>vertx-dependencies</artifactId>
        <version>${stack.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${junit.version}</version>
      </dependency>
      <dependency>
        <groupId>org.assertj</groupId>
        <artifactId>assertj-core</artifactId>
        <version>${assertj.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
